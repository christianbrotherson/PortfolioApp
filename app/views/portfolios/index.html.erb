<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_items.each do |portfolio_item| %>
      <tr>
        <td><%= portfolio_item.title %></td>
        <td><%= portfolio_item.subtitle %></td>
        <td><%= portfolio_item.body %></td>
        <td><%= portfolio_item.main_image %></td>
        <td><%= portfolio_item.thumb_image %></td>
        <td><%= link_to 'Show', portfolio_path(portfolio_item) %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_portfolio_path %>