<p id="notice"><%= notice %></p>

<h1>Portfolios</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th>Thumb Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolio_items.each do |portfolio_item| %>
      <tr>
        <td><%= portfolio_item.title %></td>
        <td><%= portfolio_item.subtitle %></td>
        <td><%= portfolio_item.body %></td>
        <td><a href="http://placehold.it"><img src="http://placehold.it/350x200"></a></td>
        <td><%= link_to 'View Portfolio Item', portfolio_path(portfolio_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus-square'), new_portfolio_path %>